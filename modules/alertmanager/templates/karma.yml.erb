# https://github.com/prymitive/karma/blob/master/docs/CONFIGURATION.md
alertmanager:
  servers:
    - name: "<%= @facts['domain']  %>"
      uri: "http://localhost:9093"
      proxy: true

<% if @auth_header %>
# Auto-fill silence dialog with the authenticated user
authentication:
  header:
    name: <%= @auth_header %>
    value_re: ^(.+)$
<% end %>

labels:
  strip:
    # Hide 'info' label since it is duplicated into 'summary' annotation for Icinga alerts
    - 'info'
  color:
    custom:
      # Match Icinga background colors for 'severity'
      severity:
        - value: 'critical'
          color: '#ffd4c9'
        - value: 'warning'
          color: '#ffda9f'
        - value: 'unknown'
          color: '#eeaeee'

# Sort by decreasing severity (Icinga compat)
grid:
  sorting:
    order: label
    reverse: false
    label: severity
    customValues:
      labels:
        severity:
          critical: 1
          warning: 2
          unknown: 3

# Start with 'description' label collapsed
annotations:
  hidden:
    - description

filters:
  default:
    - "@state=active"

karma:
  name: "Alerts for <%= @facts['domain'] %>"
