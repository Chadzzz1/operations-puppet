# Sample configuration.
# See https://prometheus.io/docs/alerting/configuration/ for documentation.

global:
  smtp_smarthost: 'localhost:25'
  smtp_from: 'sre-observability@<%= scope.lookupvar('::domain') %>'
  smtp_require_tls: false

<% if @victorops_api_key %>
  victorops_api_key: '<%= @victorops_api_key %>'
<% end %>

# The directory from which notification templates are read.
templates:
  - '/etc/prometheus/alertmanager_templates/*.tmpl'

route:
  receiver: default
  group_by: ['alertname', 'cluster', 'scope']
  routes:
    # Log all notifications
    - receiver: 'logger'
      continue: true


    # Team routes
    - match:
        team: 'dcops'
      receiver: 'dcops-mail'
    - match:
        team: 'noc'
      receiver: 'noc-ircmail'
    - match:
        team: 'netops'
      receiver: 'netops-mail'
    - match:
        team: 'peering'
      receiver: 'peering-mail'



    # Default routing for page/critical alerts
    - match:
        severity: 'page'
      receiver: 'sre-irc'
    - match:
        severity: 'critical'
      receiver: 'sre-irc'



    # Force 'default' receiver as last and catch-all child route
    - receiver: 'default'

receivers:
# alertmanager-webhook-logger endpoint
- name: 'logger'
  webhook_configs:
    - url: 'http://localhost:6725'

- name: 'default'

- name: 'sre-irc'
  webhook_configs:
    - url: 'http://<%= @active_host %>:19190/<%= @irc_channel %>'

# team-based receivers
- name: 'noc-ircmail'
  webhook_configs:
    - url: 'http://<%= @active_host %>:19190/wikimedia-operations'
  email_configs:
    - to: 'noc@<%= scope.lookupvar('::domain') %>'

- name: 'netops-mail'
  email_configs:
    - to: 'ayounsi@<%= scope.lookupvar('::domain') %>'

- name: 'dcops-mail'
  email_configs:
    - to: 'datacenterops@<%= scope.lookupvar('::domain') %>'

- name: 'peering-mail'
  email_configs:
    - to: 'peering@<%= scope.lookupvar('::domain') %>'
