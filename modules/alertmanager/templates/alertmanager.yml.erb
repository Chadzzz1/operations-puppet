# Sample configuration.
# See https://prometheus.io/docs/alerting/configuration/ for documentation.

global:
  smtp_smarthost: 'localhost:25'
  smtp_from: 'alertmanager@<%= scope.lookupvar('::domain') %>'
  smtp_require_tls: false

<% if @victorops_api_key %>
  victorops_api_key: '<%= @victorops_api_key %>'
<% end %>

# The directory from which notification templates are read.
templates:
  - '/etc/prometheus/alertmanager_templates/*.tmpl'

route:
  receiver: default
  group_by: ['alertname', 'cluster', 'scope']
  routes:
    # Icinga compatibility alerts 'branch'
    - match:
        alertname: IcingaServiceProblem
      group_by: ['alertname', 'service']
      routes:
        - match:
            severity: 'critical'
          receiver: 'irc'

receivers:
- name: 'default'

- name: 'irc'
  webhook_configs:
    - url: 'http://<%= @active_host %>:19190/<%= @irc_channel %>'
