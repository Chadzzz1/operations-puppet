[Unit]
Description=Monitors RIPE Atlas probe output and makes it available to Prometheus
Documentation=https://github.com/czerwonk/atlas_exporter

[Service]
ExecStart=/bin/sh -c '/usr/bin/atlas_exporter -config.file <%= @config_file %> -web.listen-address :<%= @exporter_port %> 2>&1 | grep -v level=info'
User=prometheus
Restart=always

[Install]
WantedBy=multi-user.target