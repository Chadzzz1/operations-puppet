<%-
  def bool2yes_no(value)
    value ? 'yes' : 'no'
  end
-%>

Host *
<%- unless @send_env.empty? -%>
  SendEnv <%= @send_env.join(' ') %>
<%- end -%>
  HashKnownHosts <%= bool2yes_no(@hash_known_hosts) %>
  GSSAPIAuthentication <%= bool2yes_no(@gss_api_authentication) %>
  GSSAPIDelegateCredentials <%= bool2yes_no(@gss_api_delegate_credentials) %>
