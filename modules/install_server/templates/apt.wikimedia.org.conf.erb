server {
   listen 80 default_server;
   listen [::]:80 ipv6only=on default_server;
   server_name apt.wikimedia.org;

   root /srv;

   location = / {
      return 302 https://wikitech.wikimedia.org/wiki/APT_repository;
   }

   location / {
      index index.html index.htm;
      autoindex on;
      charset utf-8;
   }
}

server {
   listen 443 default_server ssl;
   listen [::]:443 ipv6only=on default_server ssl;
   server_name apt.wikimedia.org;

   ssl_certificate /etc/acmecerts/apt/live/ec-prime256v1.chained.crt;
   ssl_certificate_key /etc/acmecerts/apt/live/ec-prime256v1.key;
   ssl_certificate /etc/acmecerts/apt/live/rsa-2048.chained.crt;
   ssl_certificate_key /etc/acmecerts/apt/live/rsa-2048.key;
   <%= @ssl_settings.join("\n   ") %>

   root /srv;

   location = / {
      return 302 https://wikitech.wikimedia.org/wiki/APT_repository;
   }

   location / {
      index index.html index.htm;
      autoindex on;
      charset utf-8;
   }
}
