name: <%= @upstream_name %>
connect_timeout: <%= @connect_timeout %>s
type: strict_dns
lb_policy: round_robin
load_assignment:
  cluster_name: <%= @upstream_name %>
  endpoints:
  - lb_endpoints:
    - endpoint:
        address:
          socket_address:
            address: <%= @upstream.fetch('upstream_addr', @fqdn) %>
            port_value: <%= @upstream['upstream_port'] %>
