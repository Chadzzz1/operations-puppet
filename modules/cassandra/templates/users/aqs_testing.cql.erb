GRANT DROP   ON KEYSPACE aqs_testing TO aqs_testing;
GRANT SELECT ON KEYSPACE aqs_testing TO aqs_testing;
GRANT MODIFY ON KEYSPACE aqs_testing TO aqs_testing;
