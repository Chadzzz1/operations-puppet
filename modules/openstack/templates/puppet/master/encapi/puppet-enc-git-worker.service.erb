[Unit]
Description=Puppet ENC Git update worker
After=keyholder-proxy.service

[Service]
User=www-data
Group=www-data
ExecStart=/usr/local/bin/puppet-enc-git-worker

ProtectSystem=strict
ReadOnlyPaths=/etc/puppet-enc
ReadWritePaths=<%= @git_repository_path %>

[Install]
WantedBy=multi-user.target
