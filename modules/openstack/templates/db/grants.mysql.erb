GRANT ALL PRIVILEGES ON <%= @db_name %>.* TO '<%= @db_user %>'@'<%= scope.function_ipresolve([access_host, 4]) %>' \
  IDENTIFIED BY PASSWORD '<%= @db_pass %>';

GRANT ALL PRIVILEGES ON <%= @db_name %>.* TO '<%= @db_user %>'@'<%= scope.function_ipresolve([access_host, 6]) %>' \
