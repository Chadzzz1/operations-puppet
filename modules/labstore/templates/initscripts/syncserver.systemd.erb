[Unit]
Description=NFS Dir rsync service
After=network.target

[Service]
User=root
ExecStart=/usr/local/sbin/syncserver --interval <%= @interval %> --partner-host <%= @partner_host%> --sync-path <%= @datapath %> --cluster-ip <%= @cluster_ip %>
RestartSec=10
Restart=on-failure
Nice=<%= @niceness %>

[Install]
WantedBy=multi-user.target
