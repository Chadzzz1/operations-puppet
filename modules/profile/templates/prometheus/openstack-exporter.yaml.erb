listen_port: <%= @listen_port %>
cache_refresh_interval: <%= @cache_refresh_interval %>
cache_file: <%= @cache_file %>
cloud: <%= @region %>
openstack_allocation_ratio_vcpu: <%= @cpu_allocation_ratio %>
openstack_allocation_ratio_ram: <%= @ram_allocation_ratio %>
openstack_allocation_ratio_disk: <%= @disk_allocation_ratio %>

# To export hypervisor_schedulable_instances metric set desired instance size
schedulable_instance_size:
    ram_mbs: <%= @schedulable_instance_size.ram_mbs %>
    vcpu: <%= @schedulable_instance_size.vcpu %>
    disk_gbs: <%= @schedulable_instance_size.disk_gbs %>

use_nova_volumes: False
