# Managed by Puppet

[auth]
netbox_token=<%= @rw_token %>
ganeti_user=<%= @ganeti_user %>
ganeti_password=<%= @ganeti_password %>
ca_cert=<%= @ganeti_ca_cert %>

[netbox]
api=<%= @netbox_api %>

<% @ganeti_sync_profiles.each do |profile| -%>
[profile:<%= profile['profile'] %>]
site=<%= profile['site'] %>
cluster=<%= profile['url'] %>
<% if profile.has_key?('port') -%>
port=<%= profile['port'] %>
<% end %>
<% end %>
