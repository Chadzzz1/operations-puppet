# vim: filetype=apache


<VirtualHost *:80>
    ServerName netbox.wikimedia.org
    ServerAdmin noc@wikimedia.org
    RewriteEngine on
    RewriteRule ^/(.*)$ https://netbox.wikimedia.org/$1 [L,R=301]
</VirtualHost>

<VirtualHost *:443>
    ServerName netbox.wikimedia.org
    ServerAdmin noc@wikimedia.org

    SSLEngine on
    SSLCertificateFile /etc/acmecerts/netbox.rsa-2048.crt
    SSLCertificateChainFile /etc/acmecerts/netbox.rsa-2048.chain.crt
    SSLCertificateKeyFile /etc/acmecerts/netbox.rsa-2048.key
    <%= @ssl_settings.join("\n    ") %>

    # https://httpoxy.org/
    RequestHeader unset Proxy early

    ProxyPreserveHost On

    Alias /static /srv/deployment/netbox/deploy/src/netbox/static

    # Needed to allow token-based API authentication
    WSGIPassAuthorization on

    <Directory /srv/deployment/netbox/deploy/src/netbox/static>
        Options Indexes FollowSymLinks MultiViews
        AllowOverride None
        Require all granted
    </Directory>

    <Location /static>
        ProxyPass !
    </Location>

    <%- if @port -%>
    ProxyPass / http://127.0.0.1:<%= @port%>/
    ProxyPassReverse / http://127.0.0.1:<%= @port%>/
    <%- else -%>
    ProxyPass / http://127.0.0.1:8001/
    ProxyPassReverse / http://127.0.0.1:8001/
    <%- end -%>

    # Possible values include: debug, info, notice, warn, error, crit,
    # alert, emerg.
    LogLevel warn
    CustomLog /var/log/apache2/netbox.wikimedia.org-access.log wmf
    ErrorLog /var/log/apache2/netbox.wikimedia.org-error.log

</VirtualHost>
