[Unit]
Description=MjoLniR kafka msearch daemon
After=network.target

[Service]
User=nobody
Group=nogroup
ExecStart=/srv/deployment/search/mjolnir/venv/bin/mjolnir-utilities.py kafka_msearch_daemon \
    --brokers <%= @kafka_config['brokers']['string'] %> \
    --input_topic <%= @input_topic %> \
    --output_topic <%= @output_topic %> \
    --num-workers <%= @num_workers %> \
    --max-concurrent-searches <%= @max_concurrent_searches %>
StandardInput=null
StandardOutput=journal
StandardError=journal
RestartSec=2
Restart=always

[Install]
WantedBy=multi-user.target
