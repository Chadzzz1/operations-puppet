# Note: This file is managed by puppet.

listen <%= @title %>
    bind *:<%= @port_frontend %>
    balance leastconn
    mode tcp
    option tcpka
<% @healthcheck_options.each do |option| -%>
    <%= option %>
<% end -%>
<% @servers.each do |server| -%>
    server <%= server %> <%= scope.function_ipresolve([server]) %>:<%= @port_backend %> check port 9990 inter 1s rise 2 fall 4
<% end -%>
    timeout  client 90m
    timeout  server 90m
