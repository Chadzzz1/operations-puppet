# Note: This file is managed by puppet.
frontend k8s-ingress
    bind 0.0.0.0:<%= @ingress_bind_port %>
    <%- if @ingress_bind_tls_port and @ingress_tls_pem_file -%>
    bind 0.0.0.0:<%= @ingress_bind_tls_port %> ssl crt <%= @ingress_tls_pem_file %>
    <%- end -%>
    mode tcp
    option tcplog
    timeout client 1h
    default_backend k8s-ingress

backend k8s-ingress
    mode tcp
    option tcplog
    option tcp-check
    balance roundrobin
    timeout server 1h
    default-server inter 10s downinter 5s rise 2 fall 2 slowstart 60s maxconn 250 maxqueue 256 weight 100
<% @ingress_nodes.each do |server| -%>
    server <%= server %> <%= server %>:<%= @ingress_backend_port %> check
<% end -%>
