#!/bin/bash

INSTALL_DIR=/opt/wmf-mariadb101
PATH="/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/opt/wmf-mariadb101/bin/"

case "$1" in
    start)
        pushd $INSTALL_DIR
        $INSTALL_DIR/bin/mysqld_multi start 1-7
        popd
        ;;
    stop)
        pushd $INSTALL_DIR
        $INSTALL_DIR/bin/mysqld_multi stop 1-7
        popd
        ;;
    status)
        pushd $INSTALL_DIR
        $INSTALL_DIR/bin/mysqld_multi report
        popd
        ;;
    *)
        echo $"Usage: $0 {start|stop|status}"
        exit 1
esac
exit 0
