#!/bin/bash
script=$(basename "$0")
hostname=$1
user_agent="wmf-icinga/${script} (root@wikimedia.org)"
/usr/lib/nagios/plugins/check_http -H "${hostname}" --ssl --sni -u "/w/api.php?action=query&meta=siteinfo&format=json&siprop=statistics" --linespan --ereg '"median":[^}]*"lag":([1-3]?[0-9]?[0-9]?[0-9]),'  -A "${user_agent}"
