# This file managed by puppet rsyslog::input::file

input(type="imfile"
      File="<%= @path %>"
      reopenOnTruncate="<%= @reopen_on_truncate %>"
      <% unless @startmsg_regex.empty? -%>
      startmsg.regex="<%= @startmsg_regex %>"
      <% end -%>
      Tag="<%= @syslog_tag_prefix %>-<%= @syslog_tag %>")
