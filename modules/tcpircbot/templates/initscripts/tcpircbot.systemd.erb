<%#- SPDX-License-Identifier: Apache-2.0 -%>
[Unit]
Description=TCP socket to IRC bot: <%= @service_name %>

[Service]

ExecStart=/usr/bin/python3 tcpircbot.py <%= @service_name %>.json
Restart=always
RestartSec=5s
WorkingDirectory=/srv/tcpircbot
User=tcpircbot
Group=tcpircbot
SyslogIdentifier=<%= @service_name %>

[Install]
WantedBy=multi-user.target
