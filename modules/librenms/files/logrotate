/var/log/librenms/librenms.log {
    rotate 7
    daily
    compress
    delaycompress
    missingok
    create 0660 librenms root
    su librenms librenms
}
/var/log/librenms/daily.log {
    rotate 7
    daily
    compress
    delaycompress
    missingok
    notifempty
    create 0660 www-data librenms
    su www-data librenms
}
