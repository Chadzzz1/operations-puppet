{
  "servers": [
    {
      "type": "client",
      "port": 22280,
      "listen": "0.0.0.0"
<% if @enable_ssl -%>
      ,
      "ssl.key": "<%= @sslkey %>",
      "ssl.cert": "<%= @sslcert %>",
      "ssl.chain": "<%= @sslchain %>"
<%- end %>
    },
    {
      "type": "admin",
      "port": 22281,
      "listen": "127.0.0.1"
    }
  ],
  "logs": [
    {
      "path": "/var/log/aphlict/aphlict.log"
    }
  ],
  "pidfile": "/var/run/aphlict/aphlict.pid"
}
