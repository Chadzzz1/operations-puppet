[global]
  auth cluster required = cephx
  auth service required = cephx
  auth client required = cephx

  fsid = <%= @fsid %>

  mon initial members = <%= @mon_hosts.map{|h| "#{h.split('.')[0]}"}.join(',') %>
  mon host = <%= @mon_addrs.map{|i| "[v2:#{i}:3300/0,v1:#{i}:6789/0]"}.join(',') %>

<% @mon_hosts.each do |host| -%>
[mon.<%= host.split('.')[0] %>]
    host = <%= host.split('.')[0] %>
    mon addr = <%= scope.function_ipresolve([host, 4]) %>
<% end %>
