[Unit]
Description=Thanos query
Documentation=https://github.com/improbable-eng/thanos/

[Service]
Restart=always
User=thanos
ExecStart=/usr/bin/thanos query --http-address <%= @http_address %> --query.replica-label <%= @replica_label %> --store.sd-files <%= @sd_files %>
ExecReload=/bin/kill -HUP $MAINPID
TimeoutStopSec=20s

[Install]
WantedBy=multi-user.target

