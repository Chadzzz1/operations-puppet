[Unit]
Description=Thanos store
Documentation=https://github.com/improbable-eng/thanos/

[Service]
Restart=always
User=thanos
ExecStart=/usr/bin/thanos store --http-address <%= @http_address %> --grpc-address <%= @grpc_address %> --data-dir <%= @data_dir %> --index-cache.config-file <%= @cache_config_file %> --objstore.config-file <%= @objstore_config_file %> <%= @min_time ? "--min-time #{@min_time}" : '' %> <%= @max_time ? "--max-time #{@max_time}" : '' %>
ExecReload=/bin/kill -HUP $MAINPID
TimeoutStopSec=20s
SyslogIdentifier=%N

[Install]
WantedBy=multi-user.target

