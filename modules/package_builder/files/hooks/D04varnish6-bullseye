#!/bin/sh
# SPDX-License-Identifier: Apache-2.0

# If pbuilder is called by gbp DIST is stored in GBP_PBUILDER_DIST
DIST=${GBP_PBUILDER_DIST:-$DIST}

if [ "$VARNISH6" = "yes" ] && [ "$DIST" = "bullseye" ]; then
    cat > /etc/apt/sources.list.d/wikimedia-varnish6.list <<-'EOF'
    deb http://apt.wikimedia.org/wikimedia bullseye-wikimedia component/varnish6
    deb-src http://apt.wikimedia.org/wikimedia bullseye-wikimedia component/varnish6
EOF
    apt-get update
fi
