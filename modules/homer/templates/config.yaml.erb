<%#- SPDX-License-Identifier: Apache-2.0 -%>
base_paths:
  # Base path of public configuration.
  public: <%= @public_repo %>
  # [optional] Base path of private configuration.
  private: <%= @private_repo %>
  output: <%= @output_dir %>
netbox:
    # Netbox URL
    url: <%= @nb_api %>
    # Netbox token
    token: <%= @nb_token %>
    inventory:
        device_roles:
            - asw
            - cloudsw
            - cr
            - msw
            - mr
            - pfw
        device_statuses:
            - Active
            - Staged
    plugin: homer_plugins.wmf-netbox
transports:
  username: homer
  junos:
    ignore_warning:
      - statement must contain additional statements
      - statement has no contents
      - config will be applied to ports
capirca:
  netbox_definitons: true
