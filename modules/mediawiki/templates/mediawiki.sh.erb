# MediaWiki-related shell environment variables

MEDIAWIKI_DEPLOYMENT_DIR="<%= @mediawiki_deployment_dir %>"
MEDIAWIKI_STAGING_DIR="<%= @mediawiki_staging_dir %>"
MEDIAWIKI_WEB_USER="<%= @mediawiki_web_user %>"

# Members of the wikidev group are deployers, keep the things they do
# group readable/writable.

if groups | grep -Pqw 'wikidev'; then
  umask 0002
fi
